@model IEnumerable<EM.Domain.Models.Aluno>

<h1>Lista de Alunos</h1>

<a href="/Aluno/AlunoCreate">Cadastrar Novo Aluno</a>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Matrícula</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Sexo</th>
            <th>Data de Nascimento</th>
            <th>Cidade</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var aluno in Model)
    {
        <tr>
                <td>@aluno.AlunoMatricula</td>
                <td>@aluno.AlunoNome</td>
                <td>@aluno.AlunoCPF</td>
                <td>@aluno.AlunoSexo</td>
                <td>@aluno.AlunoNascimento.ToString("dd/MM/yyyy")</td>
                <td>@aluno.AlunoCidaCodigo</td>
            <td>
                <a href="@Url.Action("AlunoEdit", new { AlunoMatricula = aluno.AlunoMatricula })">Editar</a>
                <a href="@Url.Action("AlunoDelete", new { AlunoMatricula = aluno.AlunoMatricula })">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
