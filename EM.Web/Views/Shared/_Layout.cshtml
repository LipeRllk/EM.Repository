<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Escolar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EM.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-school me-2"></i>Sistema Escolar
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Aluno" asp-action="AlunoList">
                                <i class="fas fa-users me-1"></i>Alunos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Cidade" asp-action="CidadeList">
                                <i class="fas fa-map-marker-alt me-1"></i>Cidades
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownRelatorios" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-pdf me-1"></i>Relatórios
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownRelatorios">
                                <li><a class="dropdown-item" asp-controller="Relatorios" asp-action="Index">
                                    <i class="fas fa-list me-1"></i>Todos os Relatórios
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="dropdown-header">Relatórios de Alunos</li>
                                <li><a class="dropdown-item" asp-controller="Relatorios" asp-action="SelecionarRelatorio" asp-route-tipo="RelatorioGeralAlunos">
                                    <i class="fas fa-users me-1"></i>Relatório Geral
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Relatorios" asp-action="SelecionarRelatorio" asp-route-tipo="RelatorioAlunosPorCidade">
                                    <i class="fas fa-map-marker-alt me-1"></i>Por Cidade
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="dropdown-header">Relatórios de Cidades</li>
                                <li><a class="dropdown-item" asp-controller="Relatorios" asp-action="SelecionarRelatorio" asp-route-tipo="RelatorioCidades">
                                    <i class="fas fa-city me-1"></i>Lista de Cidades
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2025 - Sistema de Gestão Escolar
                </div>
                <div class="col-md-6 text-end">
                    <small>
                        <i class="fas fa-code me-1"></i>
                        Desenvolvido com ASP.NET Core MVC + Firebird
                    </small>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
