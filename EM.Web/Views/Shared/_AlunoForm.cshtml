@model EM.Domain.Models.Aluno

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="@ViewData["Action"]"
              asp-route-AlunoMatricula="@Model.Matricula"
              method="post">
            @Html.AntiForgeryToken()
            @if (Model.Matricula != 0)
            {
                <input type="hidden" asp-for="Matricula" />
            }

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" 
                           type="text" 
                           class="form-control" 
                           placeholder="Nome do Aluno"
                           style="text-align: left;"
                           minlength="3"
                           maxlength="100"
                           required />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                    <small class="form-text text-muted">Mínimo 3 caracteres, máximo 100 caracteres</small>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="cpfInput" class="form-label">CPF</label>
                    <input asp-for="Cpf" 
                           id="cpfInput" 
                           type="text" 
                           class="form-control" 
                           maxlength="14" 
                           placeholder="000.000.000-00"
                           oninput="aplicarMascaraCPF(this)"
                           onkeypress="return apenasNumeros(event)" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                    <small class="form-text text-muted">Opcional, mas deve ser válido se informado</small>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Sexo" class="form-label"></label>
                    <select asp-for="EnumSexo" class="form-select" required>
                        <option value="">Selecione</option>
                        <option value="0">Masculino</option>
                        <option value="1">Feminino</option>
                    </select>
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                    <small class="form-text text-muted">Campo obrigatório - apenas as opções disponíveis</small>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="DataNascimento" class="form-label">Data de Nascimento</label>
                    <input asp-for="DataNascimento"
                           type="date"
                           class="form-control"
                           max="@DateTime.Today.ToString("yyyy-MM-dd")"
                           min="@DateTime.Today.AddYears(-120).ToString("yyyy-MM-dd")"
                           value="@(Model.DataNascimento == default ? DateTime.Today.ToString("yyyy-MM-dd") : Model.DataNascimento.ToString("yyyy-MM-dd"))"
                           required />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="AlunoCidaCodigo" class="form-label">Cidade</label>
                <select asp-for="AlunoCidaCodigo" asp-items="ViewBag.Cidades" class="form-select" required>
                    <option value="0">Selecione uma Cidade</option>
                </select>
                <span asp-validation-for="AlunoCidaCodigo" class="text-danger"></span>
                <small class="form-text text-muted">Selecione a cidade do cadastro de cidades</small>
            </div>

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-1"></i>Salvar
                </button>
                <a href="@Url.Action("AlunoList", "Aluno")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Voltar para lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
