@model IEnumerable<EM.Domain.Models.Cidade>

@{
    var cidadesOrdenadas = Model.OrderBy(c => c.CIDADESCRICAO);
}

<h1>Lista de Cidades</h1>

<a href="/Cidade/CidadeCreate" class="btn btn-primary mb-3">Cadastrar Nova Cidade</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Cidade</th>
            <th>UF</th>
            <th>Código IBGE</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var cidade in cidadesOrdenadas)
    {
        <tr>
            <td>@cidade.CIDACODIGO</td>
            <td>@cidade.CIDADESCRICAO</td>
            <td>@cidade.CIDAUF</td>
            <td>@cidade.CIDACODIGOIBGE</td>
            <td>
                <a href="@Url.Action("CidadeEdit", new { id = cidade.CIDACODIGO })" class="btn btn-sm btn-warning">Editar</a>
                <a href="@Url.Action("CidadeDelete", new { id = cidade.CIDACODIGO })" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
