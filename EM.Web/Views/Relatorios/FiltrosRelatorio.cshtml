@model EM.Domain.Models.RelatorioFiltroModel

@{
    ViewData["Title"] = $"Filtros - {Model.TituloRelatorio}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-filter me-2"></i>@Model.TituloRelatorio</h1>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Voltar
    </a>
</div>

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Erro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="GerarRelatorio" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="TipoRelatorio" />
    <input type="hidden" asp-for="TituloRelatorio" />
    
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-sliders-h me-2"></i>Filtros do Relatório</h5>
        </div>
        <div class="card-body">
            @if (Model.TipoRelatorio.Contains("Aluno"))
            {
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FiltroNome" class="form-label"></label>
                        <input asp-for="FiltroNome" class="form-control" placeholder="Digite o nome do aluno...">
                        <span asp-validation-for="FiltroNome" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FiltroSexo" class="form-label"></label>
                        <select asp-for="FiltroSexo" class="form-select">
                            <option value="">Todos</option>
                            <option value="0">Masculino</option>
                            <option value="1">Feminino</option>
                        </select>
                        <span asp-validation-for="FiltroSexo" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FiltroCidadeId" class="form-label"></label>
                        <select asp-for="FiltroCidadeId" class="form-select">
                            <option value="">Todas as cidades</option>
                            @if (Model.ListaCidades != null)
                            {
                                @foreach (var cidade in Model.ListaCidades)
                                {
                                    <option value="@cidade.Id">@cidade.Descricao</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="FiltroCidadeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FiltroDataNascimentoDe" class="form-label"></label>
                        <input asp-for="FiltroDataNascimentoDe" type="date" class="form-control">
                        <span asp-validation-for="FiltroDataNascimentoDe" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FiltroDataNascimentoAte" class="form-label"></label>
                        <input asp-for="FiltroDataNascimentoAte" type="date" class="form-control">
                        <span asp-validation-for="FiltroDataNascimentoAte" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FiltroIdadeMinima" class="form-label"></label>
                        <input asp-for="FiltroIdadeMinima" type="number" class="form-control" min="0" max="120">
                        <span asp-validation-for="FiltroIdadeMinima" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FiltroIdadeMaxima" class="form-label"></label>
                        <input asp-for="FiltroIdadeMaxima" type="number" class="form-control" min="0" max="120">
                        <span asp-validation-for="FiltroIdadeMaxima" class="text-danger"></span>
                    </div>
                </div>
            }

            @if (Model.TipoRelatorio.Contains("Cidade"))
            {
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FiltroNomeCidade" class="form-label"></label>
                        <input asp-for="FiltroNomeCidade" class="form-control" placeholder="Digite o nome da cidade...">
                        <span asp-validation-for="FiltroNomeCidade" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FiltroUF" class="form-label"></label>
                        <select asp-for="FiltroUF" class="form-select">
                            <option value="">Todos os estados</option>
                            @if (Model.ListaUFs != null)
                            {
                                @foreach (var uf in Model.ListaUFs)
                                {
                                    <option value="@uf">@uf</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="FiltroUF" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FiltroCodigoIBGE" class="form-label"></label>
                        <input asp-for="FiltroCodigoIBGE" class="form-control" placeholder="Código IBGE...">
                        <span asp-validation-for="FiltroCodigoIBGE" class="text-danger"></span>
                    </div>
                </div>
            }
        </div>
    </div>
</form>