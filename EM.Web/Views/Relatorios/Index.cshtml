@{
    ViewData["Title"] = "Central de Relatórios";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-file-pdf me-2"></i>Central de Relatórios</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-users me-2"></i>Relatórios de Alunos</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("SelecionarRelatorio", new { tipo = "RelatorioGeralAlunos" })" 
                       class="list-group-item list-group-item-action">
                        <i class="fas fa-list me-2"></i>Relatório Geral de Alunos
                        <small class="text-muted d-block">Lista completa de todos os alunos cadastrados</small>
                    </a>
                    <a href="@Url.Action("SelecionarRelatorio", new { tipo = "RelatorioAlunosPorCidade" })" 
                       class="list-group-item list-group-item-action">
                        <i class="fas fa-map-marker-alt me-2"></i>Alunos por Cidade
                        <small class="text-muted d-block">Relatório filtrado por cidade específica</small>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-city me-2"></i>Relatórios de Cidades</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("SelecionarRelatorio", new { tipo = "RelatorioCidades" })" 
                       class="list-group-item list-group-item-action">
                        <i class="fas fa-list me-2"></i>Lista de Cidades
                        <small class="text-muted d-block">Lista completa de todas as cidades</small>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

</div>