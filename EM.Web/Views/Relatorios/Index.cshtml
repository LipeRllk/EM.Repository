@{
    ViewData["Title"] = "Central de Relatórios";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-file-pdf me-2"></i>Central de Relatórios</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-users me-2"></i>Relatórios de Alunos</h5>
            </div>
            <div class="card-body d-flex flex-column">
                <p class="card-text">Gere relatórios completos com informações dos alunos cadastrados.</p>
                <div class="mt-auto">
                    <a href="@Url.Action("RelatorioGeralAlunos")" class="btn btn-primary w-100">
                        <i class="fas fa-list me-2"></i>Acessar Relatório
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-city me-2"></i>Relatórios de Cidades</h5>
            </div>
            <div class="card-body d-flex flex-column">
                <p class="card-text">Liste e filtre todas as cidades cadastradas no sistema.</p>
                <div class="mt-auto">
                    <a href="@Url.Action("RelatorioCidades")" class="btn btn-success w-100">
                        <i class="fas fa-list me-2"></i>Acessar Relatório
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Configuração do PDF</h5>
            </div>
            <div class="card-body d-flex flex-column">
                <p class="card-text">Configure as opções de formatação do PDF para os relatórios.</p>
                <div class="mt-auto">
                    <a href="@Url.Action("ConfiguracaoCabecalho")" class="btn btn-secondary w-100">
                        <i class="fas fa-cog me-2"></i>Acessar Configuração
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
    
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informações</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <p class="card-text">
                            <i class="fas fa-lightbulb me-2 text-warning"></i>
                            Todos os relatórios são gerados em formato PDF.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <p class="card-text">
                            <i class="fas fa-filter me-2 text-primary"></i>
                            Use os filtros para personalizar seus relatórios.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <p class="card-text mb-0">
                            <i class="fas fa-cog me-2 text-secondary"></i>
                            Configure as opções de formatação do PDF.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

