@model EM.Montador.PDF.Models.ConfigModelPDF

@{
    ViewData["Title"] = "Configuração do Cabeçalho do Relatório";
    ViewData["Action"] = "ConfiguracaoCabecalho";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success">@TempData["Sucesso"]</div>
}
@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">@TempData["Erro"]</div>
}

<form asp-action="ConfiguracaoCabecalho" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="NomeColegio" class="form-label"></label>
        <input asp-for="NomeColegio" class="form-control" maxlength="100" />
        <span asp-validation-for="NomeColegio" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Endereco" class="form-label"></label>
        <input asp-for="Endereco" class="form-control" maxlength="150" />
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>

    @if (Model?.Logo != null && Model.Logo.Length > 0)
    {
        <div class="mb-3">
            <label class="form-label">Logo atual</label>
            <div>
                <img src="@Url.Action("LogoAtual","Relatorios")" alt="Logo atual" style="max-height:120px;max-width:100%;object-fit:contain;" />
            </div>
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Upload de nova logo</label>
        <input type="file" name="LogoFile" id="LogoFile" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>