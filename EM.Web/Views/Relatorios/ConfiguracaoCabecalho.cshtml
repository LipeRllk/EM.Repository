@model EM.Montador.PDF.Models.ConfigModelPDF

@{
    ViewData["Title"] = "Configuração do Cabeçalho do Relatório";
    ViewData["Action"] = "ConfiguracaoCabecalho";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="ConfiguracaoCabecalho" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="NomeColegio" class="form-label"></label>
        <input asp-for="NomeColegio" class="form-control" maxlength="100" />
        <span asp-validation-for="NomeColegio" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Endereco" class="form-label"></label>
        <input asp-for="Endereco" class="form-control" maxlength="150" />
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Logo do Colégio</label>
        <input type="file" name="LogoFile" class="form-control" accept="image/*" />
        @if (Model.Logo != null && Model.Logo.Length > 0)
        {
            <div class="mt-2">
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Logo)" alt="Logo atual" style="max-height:80px;" />
            </div>
        }
    </div>
    <div class="mb-3 form-check">
        <input asp-for="IncluirCabecalho" class="form-check-input" />
        <label asp-for="IncluirCabecalho" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}