@model EM.Domain.Models.RelatorioFiltroModel

@{
    ViewData["Title"] = "Lista de Cidades";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-city me-2"></i>Lista de Cidades</h1>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Voltar
    </a>
</div>

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Erro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="GerarRelatorio" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="TipoRelatorio" value="RelatorioCidades" />
    <input type="hidden" asp-for="TituloRelatorio" value="Lista de Cidades" />
    
    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filtros de Cidades</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FiltroNomeCidade" class="form-label">Nome da Cidade</label>
                    <input asp-for="FiltroNomeCidade" class="form-control" placeholder="Digite o nome da cidade...">
                    <span asp-validation-for="FiltroNomeCidade" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="FiltroUF" class="form-label">UF</label>
                    <select asp-for="FiltroUF" class="form-select">
                        <option value="">Todos os estados</option>
                        @if (Model.ListaUFs != null)
                        {
                            @foreach (var uf in Model.ListaUFs)
                            {
                                <option value="@uf">@uf</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="FiltroUF" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FiltroCodigoIBGE" class="form-label">Código IBGE</label>
                    <input asp-for="FiltroCodigoIBGE" class="form-control" placeholder="Código IBGE...">
                    <span asp-validation-for="FiltroCodigoIBGE" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Configurações do PDF -->
    <div class="card mt-3">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Configurações do PDF</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-check mb-2">
                        <input asp-for="IncluirCabecalho" class="form-check-input" type="checkbox" checked>
                        <label asp-for="IncluirCabecalho" class="form-check-label">Incluir Cabeçalho</label>
                    </div>
                    <div class="form-check mb-2">
                        <input asp-for="IncluirRodape" class="form-check-input" type="checkbox" checked>
                        <label asp-for="IncluirRodape" class="form-check-label">Incluir Rodapé</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check mb-2">
                        <input asp-for="IncluirNumeroPagina" class="form-check-input" type="checkbox" checked>
                        <label asp-for="IncluirNumeroPagina" class="form-check-label">Incluir Numeração de Páginas</label>
                    </div>
                    <div class="form-check mb-2">
                        <input asp-for="OrientacaoPaisagem" class="form-check-input" type="checkbox">
                        <label asp-for="OrientacaoPaisagem" class="form-check-label">Orientação Paisagem</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-success btn-lg">
            <i class="fas fa-file-pdf me-2"></i>Gerar Relatório
        </button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-times me-2"></i>Cancelar
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}